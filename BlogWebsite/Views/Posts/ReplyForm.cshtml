@model BlogWebsite.Models.Comment
@if (Session["ReplyForm"].ToString() == "true")
{
    <div>
        <div class="panel panel-info">
            <div class="panel-heading">
                <label>Reply To This Comment</label><br />
                <form action="~/Posts/Comment" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2">Comment:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="comment" placeholder="Enter comment" name="comment">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="hidden" name="Id" value="@Model.PostID" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="hidden" name="ParentID" value="@Model.ID" />
                        </div>
                    </div>

                    <input type="hidden" name="CommentTime" value="@DateTime.Now" />

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Post Comment</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
}
